rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Users can read other users' profiles (for sender names, presence, etc.)
      allow read: if request.auth != null;
    }

    // WALLETS
    match /wallets/{userId} {
      // Users can read/write their own wallet
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // JOBS (public read)
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // CHATS
    match /chats/{chatId} {
      // Allow read/write if user is participant
      // Use resource.data for existing documents, request.resource.data for new documents
      allow read: if request.auth != null &&
        (request.auth.uid in resource.data.participants || 
         request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
      
      allow write: if request.auth != null &&
        (request.auth.uid in resource.data.participants || 
         request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
         request.auth.uid in request.resource.data.participants);

      // Messages under each chat
      match /messages/{messageId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // PRESENCE SERVICE
    match /presence/{uid} {
      // Users can read any presence (for presence subscriptions to other users)
      allow read: if request.auth != null;
      // Users can write their own presence
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // NOTIFICATIONS
    match /notifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // NOTIFICATION PREFERENCES (backend uses this)
    match /notificationPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // DEVICE TOKENS
    match /deviceTokens/{tokenId} {
      allow read, write: if request.auth != null;
    }

    // DISPUTE LOGS
    match /disputeLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // MESSAGE AUDIT TRAIL (for dispute logging)
    match /message-audit-trail/{messageId} {
      allow read, write: if request.auth != null;
    }

    // GLOBAL CHAT NOTIFICATIONS
    match /globalChatNotifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // SETTINGS OR OTHER CONFIG
    match /config/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
